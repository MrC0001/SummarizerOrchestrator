//- views/layout.pug

doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    // Google Fonts: Russo One for headers, Roboto Mono for body
    link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Russo+One&family=Roboto+Mono&display=swap")
    style.
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        /* Animated gradient background */
        background: linear-gradient(135deg, rgb(0, 0, 0), rgb(14, 32, 36));
        background-size: 400% 400%;
        animation: gradientShift 30s ease infinite;

        color: #66cc66;
        font-family: 'Roboto Mono', monospace;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start; /* Changed to flex-start to accommodate grid */
        font-size: 18px;
        line-height: 1.6;
        padding: 20px; /* Added padding */
      }

      @keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
      }

      h1, h2, h3 {
        font-family: 'Russo One', sans-serif;
        color: #66cc66;
        text-align: center;
        text-shadow: 0 0 2px rgb(22, 54, 58);
        margin: 0 0 20px 0; /* Reduced margin for better spacing */
        font-size: 2em; /* Adjusted font size */
      }

      /* Container with fade-in and slide-up animation */
      .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px;
        background-color: #242424;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(102, 204, 102, 0.4);
        transition: box-shadow 0.3s;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeinup 0.5s ease-out forwards;
      }

      @keyframes fadeinup {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .container:hover {
        box-shadow: 0 0 10px rgba(0, 188, 212, 0.4);
      }

      form {
        padding: 20px;
        margin-bottom: 20px;
      }

      .form-group {
        margin-bottom: 25px;
      }

      label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #66cc66;
        font-size: 1.1em;
      }

      select, textarea, input[type="text"] {
        width: 100%;
        padding: 12px;
        border: 1px solid #66cc66;
        border-radius: 4px;
        background-color: #2c2c2c;
        color: #e0e0e0;
        font-family: 'Roboto Mono', monospace;
        font-size: 1em;
        transition: border-color 0.3s, box-shadow 0.3s;
        box-sizing: border-box;
      }

      select {
        appearance: none;
        background-image: url('data:image/svg+xml;charset=US-ASCII,<svg xmlns="http://www.w3.org/2000/svg" width="10" height="10" fill="%2300bcd4"><path d="M0 0 L10 0 L5 5 Z"/></svg>');
        background-repeat: no-repeat;
        background-position: right 10px center;
        background-size: 10px;
        padding-right: 30px;
      }

      select:focus, textarea:focus, input[type="text"]:focus {
        border-color: #00bcd4;
        box-shadow: 0 0 8px #00bcd4 inset;
        outline: none;
      }

      textarea {
        height: 300px;
        resize: none;
        font-size: 1.05em;
      }

      /* Button with gradient and microinteractions */
      button {
        width: 100%;
        padding: 14px;
        background: linear-gradient(to bottom, #66cc66, #58b958);
        border: none;
        border-radius: 4px;
        color: #1a1a1a;
        font-size: 1.1em;
        font-family: 'Russo One', sans-serif;
        cursor: pointer;
        transition: background-color 0.3s, box-shadow 0.3s, transform 0.2s;
        box-shadow: 0 0 3px rgba(102, 204, 102, 0.3);
      }

      button:hover {
        background: linear-gradient(to bottom, #00bcd4, #00a0ba);
        box-shadow: 0 0 6px rgba(0, 188, 212, 0.5);
        transform: translateY(-2px);
      }

      button:active {
        transform: translateY(-1px) scale(0.98);
        box-shadow: 0 0 4px rgba(0, 188, 212, 0.5);
      }

      .link-group {
        text-align: center;
        margin-top: 30px;
      }

      .link-group a {
        display: inline-block;
        margin: 0 10px;
        padding: 12px 24px;
        background-color: #66cc66;
        color: #1a1a1a;
        text-decoration: none;
        border-radius: 4px;
        box-shadow: 0 0 3px rgba(102, 204, 102, 0.3);
        transition: background-color 0.3s, box-shadow 0.3s, transform 0.2s;
        font-family: 'Russo One', sans-serif;
        font-size: 1.1em;
        position: relative;
      }

      .link-group a:hover {
        background-color: #00bcd4;
        box-shadow: 0 0 6px rgba(0, 188, 212, 0.5);
        transform: translateY(-2px);
      }

      .error-message {
        background-color: #e53935;
        color: #ffffff;
        padding: 12px;
        border-radius: 4px;
        text-align: center;
        margin-bottom: 25px;
        box-shadow: 0 0 5px rgba(229, 57, 53, 0.5);
        animation: fadein 0.5s;
        font-family: 'Roboto Mono', monospace;
        font-size: 1.05em;
      }

      @keyframes fadein {
        from { opacity: 0; }
        to { opacity: 1; }
      }

      @media (max-width: 1200px) {
        .summary-grid {
          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        }
      }

      @media (max-width: 600px) {
        .container {
          width: 95%;
          max-width: 95%;
          padding: 15px;
        }

        button, .link-group a {
          font-size: 1em;
          padding: 10px 16px;
        }

        h1, h2, h3 {
          font-size: 1.8em;
        }

        textarea {
          height: 200px;
        }
      }

      /* Grid Layout for Summaries */
      .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
      }

      .summary-box {
        background-color: #2c2c2c;
        border: 2px solid #66cc66;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 0 5px rgba(102, 204, 102, 0.3);
        max-height: 400px; /* Adjust as needed */
        overflow-y: auto;
        transition: transform 0.3s, box-shadow 0.3s;
      }

      .summary-box:hover {
        transform: scale(1.02);
        box-shadow: 0 0 10px rgba(0, 188, 212, 0.5);
      }

      .summary-content {
        white-space: pre-wrap; /* Preserves formatting */
        word-wrap: break-word;
        color: #e0e0e0;
        font-family: 'Roboto Mono', monospace;
        font-size: 1em;
      }

      /* Scrollbar Styling for Summary Boxes */
      .summary-box::-webkit-scrollbar {
        width: 8px;
      }

      .summary-box::-webkit-scrollbar-track {
        background: #1a1a1a;
        border-radius: 4px;
      }

      .summary-box::-webkit-scrollbar-thumb {
        background: #66cc66;
        border-radius: 4px;
      }

      .summary-box::-webkit-scrollbar-thumb:hover {
        background: #00bcd4;
      }

      /* Copy Button Styling */
      .copy-btn {
        margin-top: 10px;
        padding: 8px 12px;
        background-color: #00bcd4;
        color: #1a1a1a;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.9em;
        transition: background-color 0.3s, transform 0.2s;
      }

      .copy-btn:hover {
        background-color: #0097a7;
        transform: translateY(-1px);
      }

      .copy-btn:active {
        transform: translateY(0);
        background-color: #008c9e;
      }

      /* Loading Spinner Styles */
      #loadingSpinner {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        display: none; /* Hidden by default */
        align-items: center;
        justify-content: center;
        z-index: 1000;
      }

      .spinner {
        border: 8px solid #f3f3f3; /* Light grey */
        border-top: 8px solid #66cc66; /* Green */
        border-radius: 50%;
        width: 60px;
        height: 60px;
        animation: spin 1s linear infinite;
      }

      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
  body
    block content
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    script(src="/js/metrics-visualization.js")